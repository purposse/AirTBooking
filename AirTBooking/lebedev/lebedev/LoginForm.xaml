<Window x:Class="lebedev.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lebedev"
        mc:Ignorable="d"
        Title="Окно входа" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/login_bg.jpg"/>
        </Grid.Background>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="88,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="88,105,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.205,0.278"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="88,39,0,0" VerticalAlignment="Top"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="105,196,0,0" VerticalAlignment="Top" Width="85" Height="30" Click="Button_Click" Background="#FFABC6FF"/>
        <PasswordBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="88,131,0,0" VerticalAlignment="Top" Width="120" Height="25"/>

    </Grid>
</Window>
